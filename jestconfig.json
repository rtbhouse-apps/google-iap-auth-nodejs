{
  "preset": "ts-jest",
  "rootDir": "./tests",
  "testMatch": ["<rootDir>/**/*.ts"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "globals": {
    "ts-jest": {
      "diagnostics": false,
      "tsConfig": {
        "isolatedModules": false,
        "esModuleInterop": true
      }
    }
  }
}
